
<% layout("../layouts/boilerplate.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-danger text-center">
                <h4>Oops! Something went wrong</h4>
                <p><%= message %></p>
                <a href="/" class="btn btn-primary">Go Home</a>
            </div>
        </div>
    </div>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error - Simply Saral</title>
    <link rel="stylesheet" href="/css/home_Page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container" style="text-align: center; padding: 4rem 2rem;">
        <div style="max-width: 600px; margin: 0 auto;">
            <i class="fas fa-exclamation-triangle" style="font-size: 4rem; color: #f59e0b; margin-bottom: 2rem;"></i>
            <h1 style="font-size: 2rem; margin-bottom: 1rem; color: #1e40af;">Oops! Something went wrong</h1>
            <p style="font-size: 1.2rem; margin-bottom: 2rem; color: #6b7280;">
                <%= message || 'An unexpected error occurred. Please try again later.' %>
            </p>
            <% if (typeof error !== 'undefined') { %>
                <div style="background: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; padding: 1rem; margin-bottom: 2rem; text-align: left;">
                    <strong style="color: #dc2626;">Error Details:</strong>
                    <pre style="margin-top: 0.5rem; color: #7f1d1d; font-size: 0.875rem;"><%= error %></pre>
                </div>
            <% } %>
            <div>
                <a href="/" style="background: #1e40af; color: white; padding: 0.75rem 2rem; border-radius: 50px; text-decoration: none; margin-right: 1rem; display: inline-block;">
                    <i class="fas fa-home"></i> Go Home
                </a>
                <button onclick="history.back()" style="background: #6b7280; color: white; padding: 0.75rem 2rem; border-radius: 50px; border: none; cursor: pointer; display: inline-block;">
                    <i class="fas fa-arrow-left"></i> Go Back
                </button>
            </div>
        </div>
    </div>
</body>
</html>
